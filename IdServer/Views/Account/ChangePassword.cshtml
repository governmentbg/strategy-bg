@model ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginBoxLayout.cshtml";
    ViewBag.Title = "Смяна на парола";
}
<div class="login-box">
    <div class="login-logo">
        @TempData.Peek("Client")
    </div>
    @*@Html.Partial("_UserMessages")*@
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Смяна на парола</p>
        <form asp-route="ChangePassword">
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <div class="input-group">
                    <input type="password" asp-for="Password" class="form-control" />
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordAgain" class="control-label"></label>
                <div class="input-group">
                    <input type="password" asp-for="PasswordAgain" class="form-control" />
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                </div>
                <span asp-validation-for="PasswordAgain" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-4 col-xs-6">
                        <button class="btn btn-primary btn-block btn-flat" name="button" value="login">Изпрати</button>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </form>
    </div>
</div>
@section scripts{
    <script src="@Url.Content("~/js/login.js")"></script>
}