@model Country
@{
    if (Model.Id > 0)
    {
        ViewData["Title"] = "Редакция на държава '" + ViewBag.countryName + "'";
    }
    else
    {
        ViewData["Title"] = "Добавяне на държава";
    }
}
<section class="content">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <form asp-action="@ViewBag.actionName" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <textbox for="Code"> </textbox>
                <textbox for="NameBG"></textbox>
                <textbox for="NameEN"></textbox>
                <ddl for="CountryTypeId" data="@ViewBag.CountryType"></ddl>
                <ddl for="RiskCategoryId" data="@ViewBag.RiskCategory"></ddl>
                <checkbox for="IsActive"></checkbox>
                <div class="form-group">
                    <input type="submit" value="Запис" class="btn btn-success btn-flat" />
                    <a asp-action="Index" class="btn btn-danger btn-flat">Назад</a>
                </div>
            </form>
        </div>
    </div>
</section>
