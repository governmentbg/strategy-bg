@model CalculatorActivityVM
<div class="row">
    <div class="col-lg-6">
        @Html.EditorFor(x => x.ActivityName)
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-3">
                @Html.EditorFor(x => x.ActivityHours)
            </div>
            <div class="col-lg-3">
                @Html.EditorFor(x => x.AverageSalary)
            </div>
            <div class="col-lg-3">
                @Html.EditorFor(x => x.CompanyNumbers)
            </div>
            <div class="col-lg-3">
                @Html.EditorFor(x => x.ActivityNumbers)
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <span class="calculatorActivityId">
            @Html.EditorFor(x => x.TotalActivityAdministrativeBurden)
        </span>
        <hr />
    </div>
</div>

