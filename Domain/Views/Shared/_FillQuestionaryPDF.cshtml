@model Models.ViewModels.Questionary.FilledQuestionaryViewModel
@{
    Layout = "~/Views/Shared/_LayoutQuestionary.cshtml";
    ViewData["Title"] = "Вие подадохте следните анкетни данни";
}

<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-11">
        <h3>@Model.QuestionaryTitle</h3>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="data">
                <div class="row">
                    <div class="col-lg-1">
                    </div>
                    @if (Model.QuestionsWithAnswers == null || Model.QuestionsWithAnswers.Count() == 0)
                    {
                        <div class="col-lg-12">
                            @Html.Raw("<b>Нямате попълнен нито един отговор.</b><br /><br />")
                        </div>
                    }
                    else
                    {
                        @foreach (var item in Model.QuestionsWithAnswers)
                        {
                            <div class="col-lg-3">
                                @Html.Raw(@item.Question)
                            </div>
                            <div class="col-lg-8">
                                <b>@Html.Raw(@item.Answer)</b>
                            </div>
                            <br />
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="data">
            <div class="row">
                <div class="col-lg-3">
                    <text>Имена на попълнилия анкетата</text>
                </div>
                <div class="col-lg-9">
                    <text><b>@Model.AnsweredUserName</b></text>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="data">
            <div class="row">
                <div class="col-lg-3">
                    <text>Email на попълнилия анкетата</text>
                </div>
                <div class="col-lg-9">
                    <text><b>@Model.AnsweredUserEmail</b></text>
                </div>
            </div>
        </div>
    </div>
</section>
