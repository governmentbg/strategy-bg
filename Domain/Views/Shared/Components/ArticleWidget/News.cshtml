@model IEnumerable<ArticleListVM>
@if (Model.Count() > 0)
{
    <p class="type">НОВИНИ</p>
    @foreach (var article in Model)
    {
        <div>
            <a asp-action="View" asp-controller="News" asp-route-id="@article.Id">
                <p class="description">
                    <b>@article.EventDate.ToString(GlobalConstants.DateFormat)</b>
                    @Html.Raw(article.Title)
                </p>
            </a>
        </div>
    }
}
else
{
    <span>Няма данни.</span>
}