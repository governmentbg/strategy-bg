@model IEnumerable<PublicConsultationVM>
@using WebCommon.Extensions
@if (Model.Count() > 0)
{
    <p class="type">ОБЩЕСТВЕНИ КОНСУЛТАЦИИ</p>
    @foreach (var item in Model)
    {
        item.CategoryImagePath = item.CategoryImagePath.EmptyToNull();
        <div>
            <a asp-action="View" asp-controller="PublicConsultation" asp-route-id="@item.Id">
                <div class="image">
                    <img src="~/img/categories/@(item.CategoryImagePath ?? "icon_default.png")" alt="@item.CategoryText">
                </div>
                <p class="description">
                    @Html.Raw(item.Title)
                </p>
            </a>
        </div>
    }
}
else
{
    <span>Няма данни.</span>
}