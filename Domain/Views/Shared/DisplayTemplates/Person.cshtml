@using WebCommon.Extensions
@model Person
@{
    var title = ViewData["title"];
}
<div class="form-group">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label class="control-label">@title</label>
        </div>
        <div class="person-editor  col-lg-8 col-md-6 col-sm-12">
            <p>
                <b>@Model.FullName , @Model.Identifier</b>
            </p>
            @if (Model.PersonType == GlobalConstants.PersonTypes.Entity)
            {
                <p>Нефизическо лице</p>
            }
            else
            {
                <p>Физическо лице</p>
            }
        </div>
    </div>
</div>
