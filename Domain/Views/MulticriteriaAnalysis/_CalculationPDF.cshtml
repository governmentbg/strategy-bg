
@model MulticriteriaAnalysisVM

@{
    Layout = "~/Views/Shared/_LayoutQuestionary.cshtml";
}
<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-11">
        <h1>Мултикритериен анализ на Административната тежест</h1>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="data">
                <div class="row">
                    <div class="col-lg-1">
                    </div>
                    @foreach (var criterion in Model.Criteria)
                    {
                        <div class="col-lg-3">
                            Критерий:
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(criterion.CriteriaName)</b>
                        </div>
                        <div class="col-lg-3">
                            Описание на критерия:
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@criterion.CriteriaDescription)</b>
                        </div>
                        <div class="col-lg-3">
                            Избрана стойност на критерия:
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@criterion.CriteriaSelectedValue)</b>
                        </div>
                        <div class="col-lg-3">
                            Тежест на критерия:
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@criterion.CriteriaImpact)</b>
                        </div>
                        <div class="col-lg-3">
                            Стойност за критерия:
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@criterion.CriteriaTotalValue)</b>
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnPDF").click(function () {
                $("#form1").submit(function () {
                    setTimeout('$("#form2").submit();', 10);
                    return false;
                });
            });
        });

        $(function () {
            $('.calculatorActivityId :input').attr("disabled", true);
        });
    </script>
}
