@{
    Layout = "~/Views/Shared/_LayoutPublicMain.cshtml";
}
@section head{
    <style>
        .section .image img {
            width: auto;
            height: auto;
        }
    </style>
}
<!-- IMAGES  -->
<div class="image__wrapper--swiper">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <!-- LOOP -->
            <div class="head__image swiper-slide">
                <div class="image__wrapper"
                     style="background-image:url(dist/assets/123.png)">
                </div>
                <div class="title__wrapper">
                    <div class="logo">
                        <img src="dist/assets/Coat_of_arms_of_Bulgaria.svg" alt="Герб" />
                    </div>
                    <div class="title">
                        <h3>ПАРТНЬОРСТВО В УПРАВЛЕНИЕТО</h3>
                    </div>
                </div>
            </div>
            <!-- END LOOP -->
            <div class="head__image swiper-slide">
                <div class="image__wrapper"
                     style="background-image:url(dist/assets/123.png)">
                </div>
                <div class="title__wrapper">
                    <div class="logo">
                        <img src="dist/assets/Coat_of_arms_of_Bulgaria.svg" alt="Герб" />
                    </div>
                    <div class="title">
                        <h3>СТРАТЕГИЧЕСКИ ДОКУМЕНТИ</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Add Arrows -->
        <div class="swiper-button-next swiper-button-white"></div>
        <div class="swiper-button-prev swiper-button-white"></div>
    </div>
</div>
<!-- END IMAGES  -->


<section class="section__wrapper">
    <div class="row">
        <div class="section col-lg-3 col-md-6 col-sm-12">
            @await Component.InvokeAsync("PublicConsultationWidget", new { loadCount = 5 })
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            @await Component.InvokeAsync("StrategicDocumentsWidget", new { loadCount = 5 })
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            @await Component.InvokeAsync("ArticleWidget", new { view = "Publication", loadCount = 5 })
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            @await Component.InvokeAsync("ArticleWidget", new { view = "News", loadCount = 5 })
        </div>
    </div>
</section>
<section class="section__wrapper" style="width:100%">
    <div class="row">
        <div class="section col-lg-3 col-md-6 col-sm-12">
            <p class="type">ОЦЕНКА НА ВЪЗДЕЙСТВИЕТО</p>
            @await Component.InvokeAsync("MasterPage", new { pageTypeId = GlobalConstants.PageTypes.Pages })
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            @*<a href="@Url.Action("NewCalculation", "Calculator", new { area = "" })">КАЛКУЛАТОР</a>*@
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            <a href="@Url.Action("ListPCSubjects", "PCSubjects", new { area = "" })">СПИСЪК НА ЛИЦАТА ПО ЗНА</a>
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            <a href="@Url.Action("ListChangeProposals", "ChangeProposals", new { area = "" })">ЗАКОНОДАТЕЛНИ ИНИЦИАТИВИ</a>
        </div>

    </div>
</section>

