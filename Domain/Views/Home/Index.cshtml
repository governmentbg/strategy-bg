@{
    Layout = "~/Views/Shared/_LayoutPublicMain.cshtml";
}
@inject IStringLocalizer<CommonResources> Localizer
@section head{
    <style>
        .section .image img {
            width: auto;
            height: auto;
        }
    </style>
}

@section scripts{
    <script>
        function strategicDocumentExport() {

            $.ajax({
                type: 'GET',
                url: '@Url.Action("ExportChoice","StrategicDocument")',
                success: function (data) {
                        ShowDialog('Експорт', data);
                    }
                });
        }
    </script>
}
<section class="section__wrapper">
    <div class="row">
        <div class="section col-lg-3 col-md-6 col-sm-12" style="vertical-align:middle;">
            <a href="@Url.Action("LawPrograms", "MSprogram",new { area=""})" class="home--button default btn-block">
                <i class="fa fa-balance-scale"></i>
                <p>@Localizer["MS_PROGRAM_LAW"]</p>
            </a>
            <a href="@Url.Action("OpPrograms", "MSprogram",new { area=""})" class="home--button default btn-block">
                <i class="fa fa-recycle"></i>
                <p>@Localizer["MS_PROGRAM_OP"]</p>
            </a>
            <a href="#" onclick="strategicDocumentExport(); return false;" class="home--button default btn-block">
                <i class="fa fa-paperclip"></i>
                <p>@Localizer["MENU_STRATEGIC_DOCUMENTS"]</p>
            </a>
