        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            <p class="type">@Localizer["MENU_PUBLIC_CONSULTATIONS"]</p>
            @await Component.InvokeAsync("PublicConsultationWidget", new { loadCount = 5, type = "comment" })
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12">
            <p class="type">@Localizer["MENU_STRATEGIC_DOCUMENTS"]</p>
            @await Component.InvokeAsync("StrategicDocumentsWidget", new { loadCount = 5 })
        </div>
        <div class="section col-lg-3 col-md-6 col-sm-12" style="vertical-align:top;">
            <ul class="nav nav-tabs" style="margin-top: -5px;">
                <li class="active"><a href="#tabNews" role="tab" data-toggle="tab"><p class="type">@(Localizer["MENU_NEWS"])</p></a></li>
                <li><a href="#tabPublications" role="tab" data-toggle="tab"><p class="type">@(Localizer["MENU_PUBLICATIONS"])</p></a></li>
            </ul>
            <div class="tab-content">
                <div id="tabNews" class="tab-pane active">
                    @await Component.InvokeAsync("ArticleWidget", new { view = "News", loadCount = 5 })
                </div>
                <div id="tabPublications" class="tab-pane">
                    @await Component.InvokeAsync("ArticleWidget", new { view = "Publication", loadCount = 5 })
                </div>
            </div>
        </div>
