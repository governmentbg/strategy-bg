@model Models.ViewModels.Calculator.CalculatorViewModel
@{
    Layout = "~/Views/Shared/_LayoutQuestionary.cshtml";
}
<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-11">
        <h1>Административен товар</h1>
    </div>
</div>



<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="data">
                <div class="row">
                    <div class="col-lg-1">
                    </div>
                    @foreach (var activity in Model.CalculatorActivities)
                    {
                        <div class="col-lg-3">
                            Име на дейност:
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@activity.ActivityName)</b>
                        </div>
                        <div class="col-lg-3">
                            Брой часове, необходими за извършването на дейността :
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@activity.ActivityHours)</b>
                        </div>
                        <div class="col-lg-3">
                            Средна работна заплата на човека, който трябва да извърши дейността :
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@activity.AverageSalary)</b>
                        </div>
                        <div class="col-lg-3">
                            Брой на фирмите, които трябва да извършат дейността :
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@activity.CompanyNumbers)</b>
                        </div>
                        <div class="col-lg-3">
                            Брой пъти на година, които бизнесът трябва да извърши дейността :
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@activity.ActivityNumbers)</b>
                        </div>
                        <div class="col-lg-3">
                            Общ административен товар :
                        </div>
                        <div class="col-lg-8">
                            <b>@Html.Raw(@activity.TotalActivityAdministrativeBurden)</b>
                        </div>
                        <br/>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-md-1">
        Общ административен товар за : @Model.AdministrativeBurdenName
    </div>
    <div class="col-md-11">
        <h3>@Model.TotalAdministrativeBurden</h3>
    </div>
</div>