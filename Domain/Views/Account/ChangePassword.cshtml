@model ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutDialog.cshtml";
    ViewData["Title"] = "Смяна на парола";
}
<h3>@ViewData["Title"]</h3>
<form asp-route="ChangePassword">
    <input asp-for="Code" type="hidden" />
    <input asp-for="ReturnUrl" type="hidden" />
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <div class="input-group">
            <input type="password" asp-for="Password" class="form-control" />
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordAgain" class="control-label"></label>
        <div class="input-group">
            <input type="password" asp-for="PasswordAgain" class="form-control" />
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        </div>
        <span asp-validation-for="PasswordAgain" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-sm-4 col-xs-6">
                <button class="btn btn-primary btn-block btn-flat" name="button" value="login">Изпрати</button>
            </div>
        </div>
    </div>
    <!-- /.col -->
</form>
