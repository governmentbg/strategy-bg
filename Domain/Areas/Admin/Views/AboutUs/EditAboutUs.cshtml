@model Models.ViewModels.AboutUs.AboutUsViewModel

@{
    ViewData["Title"] = "Контакт";
}

<section class="content">
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="EditAboutUs">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="LanguageId" type="hidden" />
                <partial name="LangView" model="@Model.LanguageId" />

                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.DateCreated)
                @Html.HiddenFor(m => m.CreatedByUserId)
                @Html.HiddenFor(m => m.ModifiedByUserId)
                @Html.HiddenFor(m => m.DateModified)
                @Html.HiddenFor(m => m.LanguageId)
                @Html.HiddenFor(m => m.IsApproved)

                @Html.EditorFor(m => m.FirstName)
                @Html.EditorFor(m => m.LastName)
                @Html.EditorFor(m => m.Phone)
                @Html.EditorFor(m => m.Email)
                @Html.EditorFor(m => m.IsAdmin)

                @Html.EditorFor(m => m.IsActive)
                @Html.EditorFor(m => m.IsDeleted)

                <div class="form-group">
                    <input id="save" type="submit" value="Запис" class="btn btn-success btn-flat" />
                    <a asp-action="ListAboutUs" asp-route-lang="@Model.LanguageId" class="btn btn-danger btn-flat">Назад</a>
                </div>

                @if (Model.Id > 0)
                {
                    <div class="row">
                        <div class="col-lg-6">
                            <h4>Прикачени документи</h4>
                            <partial name="UsedDocuments" model="@(new FileCDN.Models.FileSelect() { SourceType = GlobalConstants.SourceTypes.AboutUs, SourceID = Model.Id.ToString() })" />
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
</section>
