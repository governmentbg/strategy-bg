@model Models.ViewModels.TargetGroupsModel.TargetGroupsViewModel

@{
    ViewData["Title"] = "Целева група";
}

<section class="content">
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="EditTargetGroups">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.DateCreated)
                @Html.HiddenFor(m => m.IsApproved)
                @Html.HiddenFor(m => m.LanguageId)
                @Html.HiddenFor(m => m.CreatedByUserId)
                @Html.HiddenFor(m => m.ModifiedByUserId)
                @Html.HiddenFor(m => m.DateModified)

                @Html.EditorFor(m => m.Name)
                @Html.EditorFor(m => m.IsActive)

                @if(Model.Id == 0)
                {
                @Html.HiddenFor(m => m.IsDeleted)
                }
                else
                {
                @Html.EditorFor(m => m.IsDeleted)
                }
                <div class="form-group">
                    <input type="submit" value="Запис" class="btn btn-success btn-flat" />
                    <a asp-action="ListTargetGroups" class="btn btn-danger btn-flat">Назад</a>
                </div>
            </form>
        </div>
    </div>
</section>

