@model Models.ViewModels.LinksModels.LinksViewModel

@{
    ViewData["Title"] = "Връзка";
}

<section class="content">
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="EditLinks">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="LanguageId" type="hidden" />
                <partial name="LangView" model="@Model.LanguageId" />

                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Priority)
                @Html.HiddenFor(m => m.DateCreated)
                @*@Html.HiddenFor(m => m.IsApproved)*@
                @Html.HiddenFor(m => m.LanguageId)
                @Html.HiddenFor(m => m.CreatedByUserId)
                @Html.HiddenFor(m => m.ModifiedByUserId)
                @Html.HiddenFor(m => m.DateModified)

                @Html.EditorFor(m => m.LinksCategoryID, "GenericDropDown")
                @Html.EditorFor(m => m.Title)
                @Html.EditorFor(m => m.Url)
                @Html.EditorFor(m => m.Text)
                @Html.EditorFor(m => m.IsActive)

                @if (Model.Id == 0)
                {
                    @Html.HiddenFor(m => m.IsDeleted)
                }
                else
                {
                    @Html.EditorFor(m => m.IsDeleted)
                }
                <div class="form-group">
                    <input type="submit" value="Запис" class="btn btn-success btn-flat" />
                    <a asp-action="ListLinks" asp-route-lang="@Model.LanguageId" class="btn btn-danger btn-flat">Назад</a>
                </div>
            </form>
        </div>
    </div>
</section>

