@model Models.ViewModels.Questionary.QuestionaryViewModel

@{
    ViewData["Title"] = "Основни данни за Анкета";
}

<section class="content">
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.SourceId)
                @Html.HiddenFor(m => m.SourceTypeId)
                @Html.EditorFor(m => m.QuestionaryTitle)
                @Html.EditorFor(m => m.QuestionaryDescription)
                @Html.EditorFor(m => m.StartDate)
                @Html.EditorFor(m => m.EndDate)
                <div class="form-group">
                    <input type="submit" value="Запис" class="btn btn-success btn-flat" />
                    <a asp-action="Index" class="btn btn-danger btn-flat">Назад</a>
                </div>
            </form>
        </div>
    </div>
</section>

