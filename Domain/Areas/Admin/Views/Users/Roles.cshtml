@model UserRolesVM
@{

    ViewData["Title"] = "Роли към потребител";

}
@section breadcrumbs{

    <ul class="breadcrumb ">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Начало</a></li>
        <li><a href="@Url.Action("Update","Users",new { id=Model.UserId})">@Model.FullName</a></li>
    </ul>
}
<section class="content">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="@ViewBag.actionName" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="UserId" type="hidden" />
                <input asp-for="Username" type="hidden" />
                <input asp-for="FullName" type="hidden" />

                <display for="FullName"></display>
                <display for="Username"></display>
                <div class="form-group">
                    <label class="control-label">Роли</label>
                    @Html.EditorFor(x => x.Roles)
                </div>

                <div class="form-group">
                    <input type="submit" value="Запис" class="btn btn-success btn-flat" />
                    <a asp-action="Update" asp-route-id="@Model.UserId" class="btn btn-danger btn-flat">Назад</a>
                </div>
            </form>
        </div>
    </div>
</section>
