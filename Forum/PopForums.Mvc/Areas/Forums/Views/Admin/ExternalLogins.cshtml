@model PopForums.Configuration.Settings

@{
    ViewBag.PageTitle = PopForums.Resources.ExternalLogins;
    Layout = "~/Areas/Forums/Views/Admin/AdminMaster.cshtml";
}

@section HeaderContent {
}

<h2>@PopForums.Resources.ExternalLogins</h2>

<p>@PopForums.Resources.AppRestartRequired</p>

@using (Html.BeginForm()) {

<table class="table">
    <tr>
	    <th>Google</th>
        <td>@Html.CheckBoxFor(x => x.UseGoogleLogin) (registered redirect URI is http://yourdomain/signin-google)</td>
    </tr>
	<tr>
		<td>ClientId:</td>
		<td>@Html.TextBoxFor(x => x.GoogleClientId, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<td>ClientSecret:</td>
		<td>@Html.TextBoxFor(x => x.GoogleClientSecret, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<th>Facebook</th>
		<td>@Html.CheckBoxFor(x => x.UseFacebookLogin)</td>
	</tr>
	<tr>
		<td>AppID:</td>
		<td>@Html.TextBoxFor(x => x.FacebookAppID, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<td>AppSecret:</td>
		<td>@Html.TextBoxFor(x => x.FacebookAppSecret, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<th>Twitter</th>
		<td>@Html.CheckBoxFor(x => x.UseTwitterLogin)</td>
	</tr>
	<tr>
		<td>ConsumerKey:</td>
		<td>@Html.TextBoxFor(x => x.TwitterConsumerKey, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<td>ConsumerSecret:</td>
		<td>@Html.TextBoxFor(x => x.TwitterConsumerSecret, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<th>Microsoft</th>
		<td>@Html.CheckBoxFor(x => x.UseMicrosoftLogin)</td>
	</tr>
	<tr>
		<td>ClientID:</td>
		<td>@Html.TextBoxFor(x => x.MicrosoftClientID, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<td>ClientSecret:</td>
		<td>@Html.TextBoxFor(x => x.MicrosoftClientSecret, new { @class = "form-control" })</td>
	</tr>
	<tr>
		<td></td>
		<td><input type="submit" value="@PopForums.Resources.Save" class="btn btn-primary" /></td>
	</tr>
</table>

}