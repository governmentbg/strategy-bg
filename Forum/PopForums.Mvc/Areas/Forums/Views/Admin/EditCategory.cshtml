@model Category

<h3>@PopForums.Resources.CategoryEditTitle</h3>

<form asp-action="EditCategory" method="post" class="form-inline" asp-antiforgery="false">
	<input type="text" name="newTitle" value="@Model.Title" class="form-control"/>
	<input type="hidden" name="categoryID" value="@Model.CategoryID"/>
	<input type="submit" value="@PopForums.Resources.Save" class="btn btn-primary"/>
</form>