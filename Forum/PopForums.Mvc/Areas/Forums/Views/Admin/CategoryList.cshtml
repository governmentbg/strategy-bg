@model List<Category>

<table class="table">
	@foreach (var category in Model) {
	<tr>
		<td>@if (Model.IndexOf(category) != 0) {<a href="javascript:PopForums.MoveCategory('Up',@category.CategoryID)">@PopForums.Resources.Up</a>} </td>
		<td>@if (Model.IndexOf(category) != Model.Count - 1) {<a href="javascript:PopForums.MoveCategory('Down',@category.CategoryID)">@PopForums.Resources.Down</a>} </td>
		<td>@category.Title</td>
		<td><input type="button" value="@PopForums.Resources.Edit" onclick="PopForums.EditCategory(@category.CategoryID)" class="btn btn-primary" /></td>
		<td>
			<form asp-action="DeleteCategory" method="post" asp-antiforgery="false">
				<input type="hidden" name="categoryID" value="@category.CategoryID"/>
				<input type="submit" value="@PopForums.Resources.Delete" class="btn btn-primary"/>
			</form>
		</td>
	</tr>
	}
</table>