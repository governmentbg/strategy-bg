<!DOCTYPE html>

<html>
<head>
    <title>@PopForums.Resources.PopForumsAdmin - @ViewBag.PageTitle</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/lib/PopForums/PopForums.js" type="text/javascript"></script>
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/lib/PopForums/Admin.css" rel="stylesheet" type="text/css" />
	@RenderSection("HeaderContent", required: false)
</head>
	<body>
		<div class="container">
			<div class="row">
				<h1>@PopForums.Resources.PopForumsAdmin</h1>
			</div>
			<div class="row">
				<div class="col-sm-3">
					<nav class="navbar navbar-default" role="navigation">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#MainNav">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div id="MainNav" class="collapse navbar-collapse">
							<ul class="nav navbar-collapse">
								<li><a asp-action="Index" asp-controller="Home">@PopForums.Resources.ForumHome</a></li>
								<li class="divider"></li>
								<li><a asp-action="Index">@PopForums.Resources.GeneralSettings</a></li>
								<li><a asp-action="Categories">@PopForums.Resources.Categories</a></li>
								<li><a asp-action="Forums">@PopForums.Resources.Forums</a></li>
								<li><a asp-action="ForumPermissions">@PopForums.Resources.ForumPermisions</a></li>
								<li><a asp-action="Email">@PopForums.Resources.Email</a></li>
								<li><a asp-action="Search">@PopForums.Resources.Search</a></li>
								<li><a asp-action="ExternalLogins">@PopForums.Resources.ExternalLogins</a></li>
								<li class="divider"></li>
								<li><a asp-action="EditUserSearch">@PopForums.Resources.EditUser</a></li>
								<li><a asp-action="UserRoles">@PopForums.Resources.UserRoles</a></li>
								<li><a asp-action="UserImageApprove">@PopForums.Resources.UserImageApproval</a></li>
								<li><a asp-action="Ban">@PopForums.Resources.EmailIpBan</a></li>
								<li><a asp-action="EmailUsers">@PopForums.Resources.EmailUsers</a></li>
								<li class="divider"></li>
								<li><a asp-action="ScoringGame">@PopForums.Resources.ScoringGame</a></li>
								<li><a asp-action="EventDefinitions">@PopForums.Resources.EventDefinitions</a></li>
								<li><a asp-action="AwardDefinitions">@PopForums.Resources.AwardDefinitions</a></li>
								<li><a asp-action="ManualEvent">@PopForums.Resources.ManualEvent</a></li>
								<li class="divider"></li>
								<li><a asp-action="IPHistory">@PopForums.Resources.IpHistory</a></li>
								<li><a asp-action="SecurityLog">@PopForums.Resources.SecurityLog</a></li>
								<li><a asp-action="ModerationLog">@PopForums.Resources.ModerationLog</a></li>
								<li><a asp-action="ErrorLog">@PopForums.Resources.ErrorLog</a></li>
								<li><a asp-action="Services">@PopForums.Resources.Services</a></li>
							</ul>
						</div>
					</nav>
				</div>
				<div class="col-sm-9">
					@if (ViewData["PostResult"] != null)
					{
						<p id="PostResult" class="bg-warning callout">@ViewData["PostResult"]</p>
					}
					@RenderBody()
				</div>
			</div>
			<div class="row">
				<p id="Copyright" class="small">&copy;@DateTime.Now.Year, POP World Media, LLC</p>
			</div>
		</div>
	</body>
</html>
